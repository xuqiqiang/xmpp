<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <EditText
        android:id="@+id/edittext"
        style="@style/CustomEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edittext"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/switch_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/custom_edittext_switch_back_on_selector"
            android:checked="false"
            android:drawableLeft="@drawable/note_login_register_eye"
            android:paddingTop="1dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_error_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/custom_edittext_error_tip"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>